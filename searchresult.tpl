[searchposts]
[fullresult]
<div class="main-news">
	<div class="main-news-image">
		[full-link]<img src="{image-1}" alt="{title}" />[/full-link]
	</div>
	<h2>[full-link]{title}[/full-link]</h2>
	<div class="main-news-date">
		{date=d M H:i}<i></i>{link-category}
	</div>
	<div class="main-news-text">
		{short-story limit="200"}<div style="clear: both;"></div>
	</div>
</div>
[/fullresult]
